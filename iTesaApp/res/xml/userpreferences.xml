<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
    android:title="iTesa preferences" />
    <ListPreference
     android:key="PREF_UPDATE_FREQ"
     android:title="UI Refresh frequency"
     android:summary="Frequency at which to refresh the magnetometer data on the UI"
     android:entries="@array/update_freq_options"
     android:entryValues="@array/update_freq_values"
     android:dialogTitle="Refresh frequency"
     android:defaultValue="1000"
    />
    <ListPreference
     android:key="PREF_STORE_FREQ"
     android:title="Data store frequency"
     android:summary="Frequency at which to store the data"
     android:entries="@array/store_freq_options"
     android:entryValues="@array/store_freq_values"
     android:dialogTitle="Refresh frequency"
     android:defaultValue="500"
    />

</PreferenceScreen>
